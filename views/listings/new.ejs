<% layout('/layouts/boilerplate') %>

<body>
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings">

        <input type="text" placeholder="enter title" name="listing[title]">
        <br /><br />
        <textarea name="listing[description]" placeholder="enter description" ></textarea>
        <input type="text" placeholder="enter inage URL?LINK" name="listing[image]">
        <br /><br />
        <input type="number" placeholder="enter price" name="listing[price]">
        <br /><br />
        <input type="text" placeholder="enter country" name="listing[country]">
        <br /><br />
        <input type="text" placeholder="enter location" name="listing[location]">
        <br /><br />

        <button>Add</button>

        
    </form>
</body>
